<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">

	<application>
		<resource-bundle>
			<!-- base-name nombre del paquete mas el archivo property -->
			<base-name>com.mayckol.exampleweb.i18n.contasys</base-name>
			<!-- var es el alias -->
			<var>inter</var>
		</resource-bundle>
	</application>
	<navigation-rule>
		<display-name>pages/menu</display-name>
		<from-view-id>/pages/menu.jsp</from-view-id>
		<navigation-case>
			<from-outcome>producto</from-outcome>
			<to-view-id>/pages/catalogo/producto.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>pages/menu</display-name>
		<from-view-id>/pages/menu.jsp</from-view-id>
		<navigation-case>
			<from-outcome>tipoProducto</from-outcome>
			<to-view-id>/pages/catalogo/tipoProducto.jsp</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
</faces-config>
